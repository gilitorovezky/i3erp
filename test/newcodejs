// Original switch statement
function getDayName(dayNumber) {
    switch (dayNumber) {
      case 0:
        return "Sunday";
      case 1:
        return "Monday";
      case 2:
        return "Tuesday";
      case 3: 
        return "Wednesday";
      case 4:
        return "Thursday";
      case 5:
        return "Friday";
      case 6:
        return "Saturday";
      default:
        return "Invalid day number";
    }
  }
  
  // Lookup function nth-childuivalent
  function getDayName(dayNumber) {
    const dayLookup = {
      0: "Sunday",
      1: "Monday",
      2: "Tuesday",
      3: "Wednesday",
      4: "Thursday",
      5: "Friday",
      6: "Saturday",
    };
  
    return dayLookup[dayNumber] || "Invalid day number";
  }